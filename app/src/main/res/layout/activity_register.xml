<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="app.mindweaversolutions.trucksta.trucksta.Registration.RegisterActivity">


    <TextView
        android:textColor="#171717"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/signika_light"
        android:text="Welcome,"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Happy to see you! Let's get to know each other."/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="WHAT SHOULD WE CALL YOU?"/>

    <EditText
        android:textSize="20dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="PHNO?"/>

    <EditText
        android:inputType="phone"
        android:textSize="20dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="age?"/>

    <EditText
        android:inputType="date"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DD/MM/YYYY"/>



    <Button
        android:id="@+id/next"
        android:layout_marginTop="10dp"
        android:includeFontPadding="true"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:paddingLeft="6dp"
        android:drawableEnd="@drawable/ic_action_name"
        android:drawableTint="@color/colorPrimary"
        android:textSize="20dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="bold"/>



</LinearLayout>