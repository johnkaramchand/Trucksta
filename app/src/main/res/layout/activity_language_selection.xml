<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:padding="40dp"
    android:layout_height="match_parent"
    tools:context="app.mindweaversolutions.trucksta.trucksta.LanguageSelectionActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_delivery" />


    <TextView
        android:id="@+id/locationdata"
        android:layout_gravity="center"
        android:fontFamily="@font/cabin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lang"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:fontFamily="@font/cabin_semibold"
        android:id="@+id/english"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="English(default)"
        android:background="@drawable/button_bg_stroke"
        android:drawableEnd="@drawable/ic_action_name"
        android:drawableTint="@color/colorPrimary"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_action_name" />

    <Button
        android:fontFamily="@font/cabin_semibold"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="हिंदी"

        android:drawableTint="@color/colorPrimary"
        android:background="@drawable/button_bg_stroke"
        android:drawableEnd="@drawable/ic_action_name"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_action_name" />



</LinearLayout>
