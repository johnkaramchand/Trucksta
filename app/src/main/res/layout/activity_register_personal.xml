<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="app.mindweaversolutions.trucksta.trucksta.Registration.RegisterPersonal">


    <TextView
        android:textColor="#171717"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/signika_light"
        android:text="Personal info"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Happy to see you! Let's get to know each other."/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="How many years have you been driving?"/>

    <EditText
        android:drawableStart="@drawable/ic_wheel"
        android:inputType="number"
        android:textSize="15dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Years"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Types of trucks you have driven."/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:src="@drawable/ic_t1"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:src="@drawable/ic_t2"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:src="@drawable/ic_t3"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/imageButt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:src="@drawable/ic_t4"
            android:scaleType="centerCrop"/>


    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Types of terrain you have driven on."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/imn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/ton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/imageBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>




    <Button
        android:id="@+id/nextbutton"
        android:layout_marginTop="10dp"
        android:includeFontPadding="true"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:paddingLeft="6dp"
        android:drawableEnd="@drawable/ic_action_name"
        android:drawableTint="@color/colorPrimary"
        android:textSize="20dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="bold"/>


</LinearLayout>