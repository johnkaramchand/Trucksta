<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="app.mindweaversolutions.trucksta.trucksta.Registration.RegisterPayement">


    <TextView
        android:textColor="#171717"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/signika_light"
        android:text="Almost there !"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Fill in your transcation details."/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="What's your Account Name?"/>

    <EditText
        android:textSize="15dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Account Name"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="What's your Account Number?"/>

    <EditText
        android:inputType="number"
        android:textSize="15dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Account Number"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="normal"
        android:fontFamily="@font/signika_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="What's your Bank IFSC CODE?"/>

    <EditText

        android:textSize="15dp"
        android:inputType="date"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="IFSC CODE"/>



    <Button
        android:id="@+id/nextbutton"
        android:layout_marginTop="10dp"
        android:includeFontPadding="true"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:paddingLeft="6dp"
        android:drawableEnd="@drawable/ic_action_name"
        android:drawableTint="@color/colorPrimary"
        android:textSize="20dp"
        android:fontFamily="@font/signika_light"
        android:textStyle="bold"/>




</LinearLayout>